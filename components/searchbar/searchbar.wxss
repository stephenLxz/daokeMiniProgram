.weui-search-bar {
  position: relative;
  padding: 8px;
  display: flex;
  box-sizing: border-box;
  background-color: #ededed;
  -webkit-text-size-adjust: 100%;
  align-items: center;
}

.weui-icon-search {
  margin-right: 3px;
  font-size: 14px;
  vertical-align: top;
  margin-top: 0.6em;
  height: 1.2em;
  line-height: 1.2em;
}

.weui-icon-search_in-box {
  position: absolute;
  left: 12px;
  top: 50%;
  margin-top: -8px;
}

.weui-search-bar__text {
  display: inline-block;
  font-size: 14px;
  vertical-align: top;
}

.weui-search-bar__form {
  position: relative;
  flex: auto;
  border-radius: 18px !important;
  background: #f0f0f0;
}

.weui-search-bar__box {
  position: relative;
  padding-left: 32px;
  padding-right: 32px;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
}

.weui-search-bar__input {
  height: 32px;
  line-height: 32px;
  font-size: 14px;
  caret-color: #07c160;
}

.weui-icon-clear {
  position: absolute;
  top: 50%;
  right: 0;
  bottom: 0;
  padding: 0 12px;
  font-size: 0;
  transform: translateY(-50%);
}

.weui-icon-clear:after {
  content: "";
  height: 100%;
  vertical-align: middle;
  display: inline-block;
  width: 0;
  overflow: hidden;
}

.weui-search-bar__label {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 2;
  border-radius: 18px !important;
  text-align: center;
  color: rgba(0, 0, 0, 0.5);
  background: #f0f0f0;
  line-height: 32px;
}

.weui-search-bar__cancel-btn {
  margin-left: 8px;
  line-height: 32px;
  color: #576b95;
  white-space: nowrap;
}
