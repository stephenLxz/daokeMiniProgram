Page {
  background-color: #fff;
}

.box {
  display: flex;
  flex-wrap: wrap;
}

.watchBox {
  width: 40%;
  margin: 20rpx 5% 10rpx 5%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.watchBox image {
  border-radius: 20rpx;
  width: 100%;
  height: 170rpx;
}

.watchBox text {
  font-size: 32rpx;
  padding-top: 12rpx;
  text-align: center;
  width: 100%;
}
