.box {
  padding-top: 18rpx;
  background-color: #fff;
}

/* 课程部分 */

.course {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #fff;
  display: flex;
  border-bottom: 1rpx solid #f0f0f0;
}

.course .course-pic {
  flex: 1;
  height: 110rpx;
  border-radius: 15rpx;
  overflow: hidden;
}

.course .course-pic image {
  width: 100%;
  height: 100%;
}

.course .course-item {
  padding: 0 0 0 30rpx;
  flex: 3;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}

.course .course-item .course-title text {
  font-size: 32rpx;
}

