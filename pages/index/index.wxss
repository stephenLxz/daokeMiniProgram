/**  search 部分 */

.search {
  width: 100%;
  height: 120rpx;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.search .search-bar {
  width: 95%;
  height: 60%;
  padding-left: 60rpx;
  border-radius: 50rpx;
  box-sizing: border-box;
  background-color: #f5f5f5;
}

.search .search-text {
  font-size: 34rpx;
  text-align: left;
}

.icon-sousuo {
  position: absolute;
  top: 50%;
  left: 32rpx;
  font-size: 40rpx !important;
  transform: translateY(-50%);
}

/** 轮播图 **/

.carousel {
  width: 100%;
  height: 360rpx;
}

.carousel .carousel-swiper {
  width: 100%;
  height: 100%;
}

.carousel .carousel-swiper .swiper-image {
  width: 100%;
  height: 100%;
}

/* 导航 */

.navigator {
  padding-top: 36rpx;
  width: 100%;
  height: 310rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  background-color: #fff;
}

.navigator .navigator-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 23%;
}

.navigator .navigator-item text {
  margin-top: 8rpx;
  font-size: 32rpx;
}

.navigator .item {
  width: 75rpx;
  height: 75rpx;
}

.navigator .item image {
  width: 100%;
  height: 100%;
}

/* 专题部分 */

.topic {
  width: 100%;
  height: 1800rpx;
  margin-top: 20rpx;
  background-color: #fff;
  position: relative;
}

.topic .topic-text {
  padding: 20rpx 40rpx;
}

.topic .topic-pic {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.topic .topic-image {
  width: 90%;
  height: 320rpx;
  margin-bottom: 20rpx;
}

.topic .topic-image image {
  width: 100%;
  height: 100%;
}
