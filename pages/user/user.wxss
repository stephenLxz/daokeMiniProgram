/* 头像部分 */

.userInfo {
  width: 100%;
  height: 210rpx;
  padding: 30rpx 60rpx;
  position: relative;
  background-color: #fff;
  box-sizing: border-box;
}

.userInfo .userImage {
  border-radius: 30rpx;
  overflow: hidden;
  width: 180rpx;
  height: 180rpx;
}

.userInfo .userImage image {
  width: 100%;
  height: 100%;
}

.userInfo .userName {
  position: absolute;
  left: 300rpx;
  top: 50%;
  font-size: 42rpx;
  width: 300rpx;
  transform: translateY(-50%);
}

.userInfo .userName text {
  display: inline-block;
  text-align: center;
}

.userInfo button {
  color: #fff;
  background-color: #1296db;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.userInfo .edit {
  position: absolute;
  right: 60rpx;
  top: 50%;
  width: 42rpx;
  height: 42rpx;
  transform: translateY(-50%);
}

.userInfo .edit image {
  width: 100%;
  height: 100%;
}

/* 列表选项 */

.list {
  padding-top: 36rpx;
  background-color: #fff;
}

.item {
  width: 100%;
  height: 100rpx;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  box-sizing: border-box;
  position: relative;
  background-color: #fff;
}

.item .record, .item .help, .item .feedback, .item .state {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}

.item .note {
  width: 55rpx;
  height: 55rpx;
  position: absolute;
  left: 32rpx;
  top: 50%;
  transform: translateY(-50%);
}

.item .record image, .item .note image, .item .help image, .item .feedback image,
.item .state image {
  width: 100%;
  height: 100%;
}

.item .arrow {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}

.item .arrow image {
  width: 100%;
  height: 100%;
}

.item text {
  position: absolute;
  top: 50%;
  left: 120rpx;
  transform: translateY(-50%);
  font-size: 36rpx;
}

/* 修改默认样式 */

.item button {
  background: none;
  font-weight: inherit !important;
  margin: -20rpx !important;
  padding-left: 120rpx;
  display: flex;
  align-items: center;
  text-align: left;
  width: 800rpx !important;
  height: 100rpx;
  font-size: 36rpx !important;
}

.item button::after {
  border: none;
}
